{
	"$id": "https://json-schema.whiteband.ai/judgment/search/v1.json",
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"uuid": {
			"$ref": "/common/uuid/v7.json"
		},
		"display_citation": {
			"type": "string"
		},
		"citations": {
			"type": "array",
			"items": {
				"$ref": "/judgment/content/components/citation/v1.json"
			}
		},
		"court": {
			"$ref": "/judgment/content/components/court/v1.json"
		},
		"extras": {
			"type": "object",
			"properties": {
				"id": {
					"type": "integer"
				},
				"ico_status_id": {
					"type": "integer"
				}
			},
			"required": [
				"id",
				"ico_status_id"
			]
		},
		"relevancy": {
			"$ref": "/judgment/content/components/relevancy/v1.json"
		},
		"judges": {
			"type": "array",
			"items": [
				{
					"$ref": "/judgment/content/components/judge/v1.json"
				}
			]
		},
		"lawyers": {
			"type": "object",
			"properties": {
				"left": {
					"type": "array",
					"items": {
						"$ref": "/judgment/content/components/lawyer/v1.json"
					}
				},
				"right": {
					"type": "array",
					"items": {
						"$ref": "/judgment/content/components/lawyer/v1.json"
					}
				}
			},
			"required": [
				"left",
				"right"
			]
		},
		"parties": {
			"type": "object",
			"properties": {
				"left": {
					"type": "array",
					"items": [
						{
							"$ref": "/judgment/content/components/party/v1.json"
						}
					]
				},
				"right": {
					"type": "array",
					"items": [
						{
							"$ref": "/judgment/content/components/party/v1.json"
						}
					]
				}
			},
			"required": [
				"left",
				"right"
			]
		},
		"headnotes": {
			"$ref": "/judgment/content/components/headnote_collection/v1.json"
		},
		"content_blocks": {
			"type": "array",
			"items": [
				{
					"$ref": "/judgment/content/components/content_block/v1.json"
				}
			]
		}
	},
	"required": [
		"citations",
		"court",
		"judges",
		"extras",
		"relevancy",
		"lawyers",
		"parties",
		"headnotes",
		"content_blocks"
	]
}